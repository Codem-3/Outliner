{
    "manifest_version": 3,
    "name": "Outliner - HTML Element Inspector",
    "version": "1.0.1",
    "description": "A professional tool for inspecting and highlighting HTML elements with custom outlines. Perfect for web developers and designers to visualize page structure.",
    "author": "Mohamed Mohamed - Codem3Â®",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Outliner - HTML Element Inspector"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "homepage_url": "https://github.com/yourusername/outliner-extension",
    "minimum_chrome_version": "88"
}